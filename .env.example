# AMDL Configuration
# Copy this file to .env and adjust values as needed

# Library Configuration
# Path where downloaded music files will be stored
AMDL_LIBRARY_ROOT=

# Authentication Configuration
# Path to Apple Music cookies file (Netscape format)
AMDL_COOKIES_PATH=

# Path to developer token cache file
# Default: ~/.cache/amdl/developer_token.json
AMDL_CACHE_PATH=~/.cache/amdl/developer_token.json

# Token cache TTL in seconds (default: 18000 = 5 hours)
# How long to cache the developer token before refreshing
AMDL_TOKEN_TTL=18000

# Apple Music API Configuration
# Storefront/country code (e.g., "us", "in", "gb", "jp")
# Default: in (India)
AMDL_STOREFRONT=in

# Docker Configuration
# Docker Compose service name for apple-music-dl
AMDL_DOCKER_SERVICE=
